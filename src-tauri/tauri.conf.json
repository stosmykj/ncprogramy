{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ncprogramy",
  "version": "0.1.0",
  "identifier": "com.ncprogramy.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "label": "splashscreen",
        "title": "ncprogramy",
        "url": "splashscreen.html",
        "width": 600,
        "height": 400,
        "center": true,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": true
      },
      {
        "label": "main",
        "title": "ncprogramy",
        "fullscreen": false,
        "maximized": true,
        "visible": false
      }
    ],
    "security": {
      "csp": "default-src 'self' asset: //localhost; img-src 'self' asset: //localhost",
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true,
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://gist.githubusercontent.com/stosmykj/d21b6c5b66a0b85b2b3114fbd46036c2/raw/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQyNDYyREM4NDgzMjNERTMKUldUalBUSkl5QzFHUXJnWkhmVi94dXAyZDJyWjZDY3RTWWErWFZ3VkFvb1AzWk5NanJ0OTcycUIK"
    }
  }
}
